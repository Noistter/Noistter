  <h1>RESULTADOS</h1>

    <%= auto_link("link @user, please #request") %>

    <% @count=0 %>
    <% @timeline.first(10).each do |tweet| %> 
      <%@count=@count+1 %>        
      <% if @count<4 %>
        <div class="eight columns twcard  s<%= @count %>">
      <% else if @count<7 %>
          <div class="one-third column twcard s4">
      <% else %>
          <div class="four columns twcard s6">
      <% end %>
      <% end %>
        <p>
          <%= tweet.text %>
          <!--<%= auto_link("@user") %>-->
          <!--<a href="<%= tweet.link %>", target="_blank"><%= tweet.link %></a></br>
          (REPLIES <%= tweet.respuestas %>) (FAVs <%= tweet.favorite_count %>) (RTs <%= tweet.retweet_count %>) (Puntuaci√≥n: <%= number_with_precision tweet.puntuacion, :precision => 2 %>)
          -->
        </p>
       
        <div class="twcontrols">
          <div class="user">
            <a class="user_perfil" href="http://twitter.com/<%= tweet.username %>", target="_blank"><%= image_tag tweet.perfilimg,  :class => "avatar", alt: "Avatar" %></a>
            <a class="user_name" href="http://twitter.com/<%= tweet.username %>", target="_blank">@<%= tweet.username %> 
                <% if tweet.retweeted_by != "" %>
                    (RT por @<%= tweet.retweeted_by %>)
                <% end %>
            </a>
          </div>
          <div class="control">
            <%= link_to "", "#", :remote => true ,  id:tweet.id , class: "fav" %>
            <%= link_to "", "#", :remote => true ,  id:tweet.id , class: "rt" %>
            <%= link_to "", "#", :remote => true ,  id:tweet.id , class: "save" %>
          </div>
        </div>
      </div>
    <% end %>